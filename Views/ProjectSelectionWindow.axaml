<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        xmlns:assist="clr-namespace:Material.Styles.Assists;assembly=Material.Styles"
        xmlns:controls="clr-namespace:Material.Styles.Controls;assembly=Material.Styles"
        x:Class="PackwizModpackManager.Views.ProjectSelectionWindow"
        Title="ProjectSelectionWindow">
  <StackPanel Margin="10">
    <TextBlock Text="Seleccione un proyecto:" Margin="0,0,0,10"/>
    <controls:Card Padding="0,4">
      <ListBox Name="ProjectListBox" Height="200" Margin="0,0,0,10"/>
    </controls:Card>
    <Button Content="Abrir" Click="OnAbrirClick" Margin="0,10,0,10"/>
  </StackPanel>
</Window>
